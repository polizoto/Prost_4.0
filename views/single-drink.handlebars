{{> nav/nav}}
{{> nav/login}}

<div class="card" style="width:18rem;">
    <img src="/images/{{drinks.name}}.jpg" class="card-img-top" alt="...">
    <div class="card-body">
        <h1>{{ drinks.name }}</h1>

        <ul>
            {{#each ingredients}}
            <li>{{item}}</li>
            {{/each}}
            <li><strong>Glass:</strong> {{drinks.glass_type}}</li>
            <li><strong>Instructions:</strong> {{drinks.instructions}}</li>
        </ul>

        <h3>Favorites: {{drinks.star_count}}</h3>

        <form class="comment-form">
        <div>
            <textarea name="comment-body"></textarea>
        </div>
        <div>
            <button type="submit">add comment</button>
            <button type="button" class="favorite-btn">Add to Favorites</button>
        </div>
        </form>
        {{> nav/comments drinks.comments}}
    </div>
</div>       
<script src="/js/comment.js"></script>
<script src="/js/add-star.js"></script>