{{> nav/login}}


<section class="container">
    <h3="all-drinks">Our Drinks</h3>
</section>

<div class="card-deck">
    {{#each drinks}}
        <div class="flip-card">
            <div class="flip-card-inner">
                <div class="flip-card-front">
                    <img src="/images/{{name}}.jpg" alt="a drink" style="width:270px;height:400px">
                </div>
                <div class="flip-card-back">
                    <h1>{{name}}</h1>
                    <i class="fa-regular fa-heart heart"></i>
                    <ul>
                        <li>{{ingredients}}</li>
                        <li>{{glass_type}}</li>
                        <li>{{instructions}}</li>
                    </ul>
              
                </div>
            </div>
        </div>
    {{/each}}
</div>

