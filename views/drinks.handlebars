{{> nav/nav}}

<section class="container">
    <h3="all-drinks">Our Drinks</h3>
</section>

<div class="card-deck">
    {{#each drinks}}
        <div class="flip-card">
            <div class="flip-card-inner">
                <div class="flip-card-front">
                    <img src="/images/margarita.jpg" alt="margarita" style="width:270px;height:400px">
                </div>
                <div class="flip-card-back">
                    <h1>{{name}}</h1>
                    <ul>
                        <li>{{ingredients}}</li>
                        <li>{{glass_type}}</li>
                        <li>{{instructions}}</li>
                    </ul>
                </div>
            </div>
        </div>
    {{/each}}
</div>